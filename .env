# הגדרות מייל - יש להחליף בנתונים האמיתיים
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# רשימת תפוצה - כתובות מייל מופרדות בפסיקים
MAILING_LIST=email1@example.com,email2@example.com,email3@example.com

# מרווח זמן בין בדיקות (בדקות) - מותאם לטיסות רגע אחרון
# 60 דקות = שעה (מתאים כי טיסות רגע אחרון לא משתנות כל הזמן)
CHECK_INTERVAL_MINUTES=60

# יעדים מוחרגים - לא יקבלו התראה על טיסות חדשות
# יש להפריד בפסיקים ללא רווחים
EXCLUDED_DESTINATIONS=קטמנדו,נפאל,הודו,בנגקוק